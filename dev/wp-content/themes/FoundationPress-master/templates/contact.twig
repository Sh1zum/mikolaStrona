{% include 'templates/parts/header.twig' %}
	<main>
		<div class="main-container" style="padding: 0px; margin: 0px; max-width: 100%;">
			<div class="grid-x page-main-slider" style="background-image: url('{{ post.thumbnail.src }}');">
				<div class="shadow-layer">
					<div class="main-container">
						<div class="grid-x grid-margin-x" style="text-align: right; margin-top: 230px; color: white;">
							<div class="cell"><h1>{{ function('get_the_title') }}</h1></div>
							<div class="cell breadcrumbs">{{ function('yoast_breadcrumb', '<p id="breadcrumbs">', '</p>') }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="main-container" style="margin-top: 50px;">
                    {% set columns = 2 %}
			{% for salon in post.meta('salon') %}
			
		
				<div class="grid-x grid-margin-x grid-contact">
					<div class="cell">
                                            {% if loop.index % columns %}
<h3 style="font-size: 1.5rem; float: left; margin-left: 0px; margin-top: -25px; display: inline-block; background-color: white; padding: 0px 30px 0px 30px">{{ salon.nazwa_salonu}}<h3>
                                            {% else %}
<h3 style="font-size: 1.5rem; float: right; margin-right: 40px; margin-top: -25px; display: inline-block; background-color: white; padding: 0px 30px 0px 30px">{{ salon.nazwa_salonu}}<h3>                                                
                                            {% endif %}
                                            
                                                    </div>
					<div class="cell medium-4" style="order:{% if loop.index % columns %}1{% else %}3{% endif %}"><b>Adres</b><br>
					{{ salon.nazwa_galerii}}<br>
					ul. {{ salon.ulica }} {{ salon.numer }}, {{ salon.kod_pocztowy }} {{ salon.miejscowosc }}<br>
					<br><br>
					<b>Telefon:</b> &nbsp;{{ salon.telefon }}<br>
					<b>Email:</b> &nbsp;&nbsp;&nbsp;&nbsp;{{ salon.email }}<br><br>

					<b>Kierownik lokalu:</b> {{ salon.kierownik_lokalu }}<br>
					</div>
					<div class="cell medium-3" style="order:2">
                                            <table>
					<tbody>
                                        {% for godziny in salon.godziny_otwarcia %}    
                                            <tr><td><b>{{ godziny.dzien_tygodnia }}</b></td>  <td style="padding-left: 20px;">{{ godziny.godzina_otwarcia }} - {{ godziny.godzina_zamkniecia }}</td></tr>
                                        {% endfor %}    
					</tbody></table>
		
					</div>
					<div class="cell medium-5" style="order:{% if loop.index % columns %}3{% else %}1{% endif %}"><img style="" src="{{ salon.zdjecie_salonu.url }}" class="img-salon" alt="{{ salon.zdjecie_salonu.alt }}" /></div>
				</div>
			{% endfor %}
		</div>
		<div class="main-container" style="margin-top: 40px;">
			<form method="POST">
			<div class="grid-x grid-margin-x align-center">
				<div class="cell large-9 ">
                                    <center><h4>Formularz kontaktowy</h4></center><br>
					<div class="grid-x grid-margin-x">
						
						<div class="cell medium-6">
						 <label>Imię
							  <input type="text" name="imie">
							</label>
                                                    {{ function('wp_nonce_field', 'imie_action', 'imie_nonce', false, false) }}
						</div>
						<div class="cell medium-6">
						<label>Numer telefonu / Email
							  <input type="text" name="contact">
							</label>
                                                    {{ function('wp_nonce_field', 'contact_action', 'contact_nonce', false, false) }}
						</div>
						<div class="cell">
						<label>
                                                    {{ function('wp_nonce_field', 'tresc_action', 'tresc_nonce', false, false) }}
							Poniżej napisz treść wiadomości
						  <textarea placeholder="" name="tresc"></textarea>
						</label>
						</div>
						
						<div class="cell">
							<div class="grid-x">
								<div class="cell medium-1">
									<input id="checkbox1" type="checkbox" class="cheche">
								</div>
								<div class="cell medium-11">
								<label for="checkbox1">Wyrażam zgodę na przetwarzanie i wykorzystywanie danych osobowych zgodnie RODO w związku z wysłaniem zapytania przez formularz kontaktowy. Podanie danych jest dobrowolne i niezbędne do przetworzenia zapytania.</label>
								</div>
							</div>
							<div class="grid-x">
								<div class="cell medium-1">
									<input id="checkbox2" type="checkbox" class="cheche">
								</div>
								<div class="cell medium-11">
								<label for="checkbox2">Oświadczam, że zostałem(am) poinformowany(na) o prawie dostępu do treści swoich danych. oraz możliwości ich poprawiania, w tym wniesienia o ich usunięcie. Administratorem danych osobowych jest MIKOLA.</label>
								</div>
							</div>
						</div>
						<div class="cell" style="text-align:center; padding-top: 40px; padding-bottom: 20px">
							<input type="submit" class="button" value="Wyślij zapytanie">
						
						</div>
					</div>
				</div>
			</div>
                        </form>
		</div>

		<style>
                    .cheche {
                        position: relative;
                        left: 50px;
                        top: 15px;
                    }
		label {
			margin-left: 30px!important;
		}
		</style>
	</main>	
	<iframe src="https://www.google.com/maps/d/u/0/embed?mid=1F26DiOFdppbtwIQBBMQQeGPTtEi3L8g7" width="100%" height="480"></iframe>
	
	
	<style>
.grid-contact {
	border: 3px solid #004b95;
	margin-bottom: 50px;
}
.grid-contact .img-salon {
	margin: 0px 30px 20px 30px;
	width: 90%;
	 box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
}
</style>
{% include 'templates/parts/footer.twig' %}
